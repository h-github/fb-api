{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["./src", "./src/types"],
  "exclude": ["./node_modules", "./typings"]
}
